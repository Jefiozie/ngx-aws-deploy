    },
    "bucket": {
      "type": "string",
      "description": "The bucket where the files should be uploaded",
      "x-prompt": "Please enter the Bucket name:"
    },
    "secretAccessKey": {
      "type": "string",
      "description": "Fill in your Secret Access key",
      "x-prompt": "Please enter your Secret Access Key:"
    },
    "accessKeyId": {
      "type": "string",
      "description": "Fill in your access key id",
      "x-prompt": "Please enter your access key id:"
    },
    "subFolder": {
      "type": "string",
      "description": "The name of the subfolder",
      "x-prompt": "Please enter your the folder where the files should be uploaded"
    }
  },
  "required": [
    "region",
    "bucket",
    "secretAccessKey",
    "accessKeyId"
  ],
  "additionalProperties": false
}