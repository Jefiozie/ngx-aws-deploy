        {
          "value": "eu-west-3",
          "label": "eu-west-3"
        },
        {
          "value": "eu-north-1",
          "label": "eu-north-1"
        },
        {
          "value": "me-south-1",
          "label": "me-south-1"
        },
        {
          "value": "sa-east-1",
          "label": "sa-east-1"
        }
